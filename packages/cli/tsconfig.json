{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@mindr/core": ["../core/src"],
      "@mindr/runtime": ["../runtime/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
} 